<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sparshgupta.chainreaction1">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name="com.activeandroid.app.Application"
        android:allowBackup="true"
        android:icon="@mipmap/gameicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/gameicon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="AA_DB_NAME"
            android:value="chainreaction1.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />
        <meta-data
            android:name="AA_MODELS"
            android:value="com.example.sparshgupta.chainreaction1.PlayerSettingsClass" />

        <activity
            android:name=".MainActivity"
            android:theme="@style/MainActivityTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GameSettingsActivityMultiplayer"
            android:label="@string/title_activity_game_settings_multiplayer"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".GameplayActivity"
            android:theme="@style/gameplayStyle" />
        <activity android:name=".PlayerSettingsActivity" />
        <activity android:name=".InGameSettingsActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".HelpAvtivity"></activity>
    </application>

</manifest>